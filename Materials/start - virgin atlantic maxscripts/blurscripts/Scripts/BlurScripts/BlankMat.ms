-------------------------------------------------------------------------------
-- Description:
-- Quickly assigns a default material to your whole scene.
-------------------------------------------------------------------------------

-------------------------------------------------------------------------------
(
-- Includes

include "$scripts\BlurScripts\BSLib.ms"

-- Variables

blm_mat_1 = get_blurmat "Default_Standard"

-- Functions

-- Script

for i in $* do
	(
	i.material = blm_mat_1
	)
)
